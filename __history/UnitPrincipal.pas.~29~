unit UnitPrincipal;

interface

uses
  // --- BIBLIOTECAS (USES) ---
  // Essas são as ferramentas que o Delphi precisa para funcionar
  Winapi.Windows, Winapi.Messages, Winapi.ShellAPI, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Math, System.IniFiles, // System.IniFiles: Usado para salvar as configurações
  // FireDAC: Bibliotecas para conectar e buscar dados no Banco SQL Server
  FireDAC.Stan.Intf, FireDAC.Stan.Option, FireDAC.Stan.Error, FireDAC.UI.Intf,
  FireDAC.Phys.Intf, FireDAC.Stan.Def, FireDAC.Phys.MSSQL, FireDAC.Phys.MSSQLDef, FireDAC.VCLUI.Wait,
  FireDAC.Stan.Param, FireDAC.DatS, FireDAC.DApt.Intf, FireDAC.DApt,
  Vcl.Grids, Vcl.DBGrids, FireDAC.Comp.DataSet,
  FireDAC.Comp.Client, Vcl.StdCtrls,
  // ReportBuilder: Bibliotecas para desenhar e imprimir a etiqueta
  ppDB, ppCtrls, ppPrnabl, ppClass,
  ppBarCod, ppBands, ppCache, ppDesignLayer, ppParameter, ppProd, ppReport,
  ppComm, ppRelatv, ppDBPipe, Vcl.Imaging.jpeg, Vcl.ExtCtrls,
  FireDAC.Stan.StorageBin, ppTypes, ppDevice, Printers, FireDAC.Stan.Pool,
  FireDAC.Stan.Async, FireDAC.Phys;

type
  TGeradorEtiquetas = class(TForm)
    // --- COMPONENTES VISUAIS E DE DADOS (Arraste e Solte do Delphi) ---
    Conexao: TFDConnection;       // A "estrada" até o banco de dados
    FDQuery2: TFDQuery;           // O "mensageiro" que leva o SQL e traz os produtos
    mtEtiquetas: TFDMemTable;     // Uma "tabela temporária na memória RAM" para duplicar as etiquetas
    DataSource1: TDataSource;     // Liga o Grid aos dados
    ppDBPipeline1: TppDBPipeline; // Liga o Relatório aos dados
    Etiqueta: TppReport;          // O desenho da etiqueta

    // Componentes internos do ReportBuilder (criados automaticamente ao desenhar a etiqueta)
    ppParameterList1: TppParameterList;
    ppDesignLayers1: TppDesignLayers;
    ppDesignLayer1: TppDesignLayer;
    ppDetailBand1: TppDetailBand;
    ppDBBarCode1: TppDBBarCode; // Componente do Código de Barras
    ppDBText2: TppDBText;
    ppDBText3: TppDBText;       // Componente que mostra a Unidade (UN, KG, LT)
    ppLabel1: TppLabel;
    ppDBText1: TppDBText;
    ppLabel2: TppLabel;
    ppColumnHeaderBand1: TppColumnHeaderBand;
    ppColumnFooterBand1: TppColumnFooterBand;
    ppShape1: TppShape;

    // Painéis e visual
    Panel1: TPanel; // Topo
    Panel2: TPanel; // Lateral Azul
    DBGrid1: TDBGrid; // Tabela de produtos
    Label1: TLabel;
    Image1: TImage;

    // Rótulos (Nomes dos campos na tela)
    Label2: TLabel; // Código
    Label7: TLabel; // Quantidade
    Label3: TLabel; // Colunas
    Label8: TLabel; // Unidade
    Label4: TLabel; // Largura
    Label5: TLabel; // Altura
    Label6: TLabel; // Espaçamento
    label9: TLabel; // Tipo Impressão

    // Campos de Digitação (Edits)
    edtCodigo: TEdit;       // Código do produto selecionado
    edtQuantidade: TEdit;   // Quantas etiquetas imprimir
    edtColuna: TEdit;       // Quantas colunas (lado a lado)
    cbUnidade: TComboBox;   // Polegadas ou Milímetros
    edtLargura: TEdit;      // Tamanho da etiqueta
    edtAltura: TEdit;
    edtEspacamento: TEdit;

    cbTipoImpressao: TComboBox;     // Visualizar ou Imprimir direto
    rgFormatoExportacao: TRadioGroup; // CSV ou Excel
    BtnGerarEtiqueta: TButton;
    BtnExcel: TButton;
    ppReport1: TppReport;
    ppColumnHeaderBand2: TppColumnHeaderBand;
    ppDetailBand2: TppDetailBand;
    ppShape2: TppShape;
    ppDBBarCode2: TppDBBarCode;
    ppDBText4: TppDBText;
    ppDBText5: TppDBText;
    ppLabel3: TppLabel;
    ppDBText6: TppDBText;
    ppLabel4: TppLabel;
    ppColumnFooterBand2: TppColumnFooterBand;
    ppDesignLayers2: TppDesignLayers;
    ppDesignLayer2: TppDesignLayer;
    ppParameterList2: TppParameterList;
    Button1: TButton;

    // --- MÉTODOS (Ações que criamos no código) ---
    procedure BtnGerarEtiquetaClick(Sender: TObject); // Clique no botão Gerar
    procedure BtnExcelClick(Sender: TObject);         // Clique no botão Excel
    procedure FormCreate(Sender: TObject);            // Quando a janela nasce (abre)
    procedure FormClose(Sender: TObject; var Action: TCloseAction); // Quando a janela morre (fecha)
    procedure FormResize(Sender: TObject);            // Quando muda o tamanho da janela

    // Evento de clique no Grid (Adicionado para controle manual)
    procedure DBGrid1CellClick(Column: TColumn);

  private
    dsRelatorio: TDataSource; // Fonte de dados exclusiva para o relatório

    // Funções auxiliares (ajudantes)
    function BuildHTMLTable(DataSet: TDataSet): string; // Ajuda no Excel
    function FormatAsCurrency(const Value: Variant): string; // Formata Dinheiro (R$)
    function StrToFloatSafe(const S: string; Default: Single): Single; // Converte texto para número com segurança (ponto/virgula)

    // Configura o papel da impressora
    procedure ConfigureReportForLabels(NumColunas: Integer; LarguraEtiqueta, AlturaEtiqueta, Espacamento: Single);

    // Salvar e Carregar configurações (Arquivo INI)
    procedure CarregarConfiguracoes;
    procedure SalvarConfiguracoes;

    // Ajuste fino do visual (posiciona os campos na tela)
    procedure PosicionarCampo(Lb: TLabel; Ctrl: TControl; X, Y, W: Integer);
    procedure AjustarLayoutGeral;
  public
  end;

var
  GeradorEtiquetas: TGeradorEtiquetas;

implementation

{$R *.dfm}

// ============================================================================
//  SELEÇÃO NO GRID (CLIQUE MANUAL)
//  Essa função só roda quando você clica com o mouse na tabela azul.
// ============================================================================
procedure TGeradorEtiquetas.DBGrid1CellClick(Column: TColumn);
begin
  // Verificamos se tem dados no grid
  if (FDQuery2.Active) and (not FDQuery2.IsEmpty) then
  begin
     // Pega APENAS o código do produto e joga no campo branco.
     // OBS: Não mexemos no campo de Colunas nem Quantidade aqui,
     // para respeitar o que você digitou.
     edtCodigo.Text := FDQuery2.FieldByName('CodigoProduto').AsString;
  end;
end;

// ============================================================================
//  LAYOUT INTELIGENTE
//  Essa parte garante que os campos fiquem alinhados e com os nomes certos.
// ============================================================================
procedure TGeradorEtiquetas.PosicionarCampo(Lb: TLabel; Ctrl: TControl; X, Y, W: Integer);
begin
  if Assigned(Ctrl) then
  begin
    // Posiciona o Campo de Texto (Edit)
    Ctrl.Left  := X;
    Ctrl.Top   := Y;
    Ctrl.Width := W;
    Ctrl.Visible := True;
    Ctrl.BringToFront; // Traz para frente (caso algo esteja tapando)

    // Posiciona o Rótulo (Label) logo acima do campo
    if Assigned(Lb) then
    begin
      Lb.Left := X;
      Lb.Top  := Y - Lb.Height - 3; // 3 pixels acima
      Lb.Visible := True;
      Lb.BringToFront;
    end;
  end;
end;

procedure TGeradorEtiquetas.AjustarLayoutGeral;
var
  Col1, Col2, Y, AlturaLinha: Integer;
  PainelLateral: TPanel;
begin
  PainelLateral := Panel2;

  // Ajusta a largura da primeira coluna do Grid para ficar bonito
  if DBGrid1.Columns.Count > 0 then
    DBGrid1.Columns[0].Width := 100;

  // --- PADRONIZAÇÃO DOS NOMES ---
  // Aqui forçamos os nomes em MAIÚSCULO para ficar organizado na tela
  if Assigned(Label2) then Label2.Caption := 'CÓDIGO DO PRODUTO';
  if Assigned(Label7) then Label7.Caption := 'QUANTIDADE';
  if Assigned(Label3) then Label3.Caption := 'NÚMERO DE COLUNAS'; // Nome completo
  if Assigned(Label8) then Label8.Caption := 'UNIDADE DE MEDIDA';
  if Assigned(Label4) then Label4.Caption := 'LARGURA';
  if Assigned(Label5) then Label5.Caption := 'ALTURA';
  if Assigned(Label6) then Label6.Caption := 'ESPAÇAMENTO';
  if Assigned(label9) then label9.Caption := 'TIPO DE IMPRESSÃO';

  // --- COORDENADAS (Onde cada coisa fica) ---
  Col1 := 15;   // Margem Esquerda
  Col2 := 170;  // Margem Direita (Segunda coluna de campos)
  Y    := 50;   // Altura inicial
  AlturaLinha := 55; // Espaço entre uma linha e outra

  // LINHA 1: Código e Quantidade
  PosicionarCampo(Label2, edtCodigo,      Col1, Y, 140);
  PosicionarCampo(Label7, edtQuantidade,  Col2, Y, 140);

  // LINHA 2: Colunas e Unidade
  Y := Y + AlturaLinha;
  PosicionarCampo(Label3, edtColuna,      Col1, Y, 80);
  PosicionarCampo(Label8, cbUnidade,      Col2, Y, 140);

  // LINHA 3: Dimensões (Largura, Altura, Espaço)
  Y := Y + AlturaLinha;
  PosicionarCampo(Label4, edtLargura,     Col1, Y, 60);
  PosicionarCampo(Label5, edtAltura,      Col1 + 70, Y, 60);
  PosicionarCampo(Label6, edtEspacamento, Col2, Y, 140);

  // LINHA 4: Tipo Impressão
  Y := Y + AlturaLinha;
  PosicionarCampo(label9, cbTipoImpressao, Col1, Y, 300);

  // LINHA 5: Exportação Excel
  Y := Y + AlturaLinha;
  if Assigned(rgFormatoExportacao) then
  begin
    rgFormatoExportacao.Left := Col1;
    rgFormatoExportacao.Top  := Y;
    rgFormatoExportacao.Width := 300;
    rgFormatoExportacao.Height := 75;
  end;

  // BOTÕES (Sempre no rodapé do painel azul)
  if PainelLateral.Height > 400 then
  begin
    BtnGerarEtiqueta.Left  := Col1;
    BtnGerarEtiqueta.Width := 145;
    BtnGerarEtiqueta.Top   := PainelLateral.Height - BtnGerarEtiqueta.Height - 20;

    BtnExcel.Left  := Col2;
    BtnExcel.Width := 145;
    BtnExcel.Top   := BtnGerarEtiqueta.Top;
  end;
end;

// Evento disparado se o usuário redimensionar a janela
procedure TGeradorEtiquetas.FormResize(Sender: TObject);
begin
  AjustarLayoutGeral;
end;

// ============================================================================
//  CONVERSÃO SEGURA DE NÚMEROS
//  Evita erro se o usuário digitar "4.5" (ponto) ou "4,5" (vírgula)
// ============================================================================
function TGeradorEtiquetas.StrToFloatSafe(const S: string; Default: Single): Single;
var TempS: string;
begin
  if Trim(S) = '' then Exit(Default);
  TempS := S;
  // Troca ponto por vírgula ou vice-versa dependendo do Windows
  if FormatSettings.DecimalSeparator = ',' then
    TempS := StringReplace(TempS, '.', ',', [rfReplaceAll])
  else
    TempS := StringReplace(TempS, ',', '.', [rfReplaceAll]);
  Result := StrToFloatDef(TempS, Default);
end;

// ============================================================================
//  SALVAR E CARREGAR (ARQUIVO .INI)
//  Guarda as suas preferências para a próxima vez que abrir o programa
// ============================================================================
procedure TGeradorEtiquetas.CarregarConfiguracoes;
var ArquivoIni: TIniFile;
begin
  ArquivoIni := TIniFile.Create(ChangeFileExt(Application.ExeName, '.ini'));
  try
    // Carrega os valores. Se não tiver nada salvo, usa os seus padrões:
    edtLargura.Text     := ArquivoIni.ReadString('ConfigEtiqueta', 'Largura', '4,5');
    edtAltura.Text      := ArquivoIni.ReadString('ConfigEtiqueta', 'Altura', '1,7');
    edtEspacamento.Text := ArquivoIni.ReadString('ConfigEtiqueta', 'Espacamento', '1');

    edtColuna.Text      := ArquivoIni.ReadString('ConfigEtiqueta', 'Colunas', '1');
    if (edtColuna.Text = '') or (edtColuna.Text = '0') then edtColuna.Text := '1';

    edtQuantidade.Text  := ArquivoIni.ReadString('ConfigEtiqueta', 'QuantidadePadrao', '1');

    // Carrega os Combos (Listas)
    if ArquivoIni.ValueExists('ConfigEtiqueta', 'TipoImpressao') then
      cbTipoImpressao.ItemIndex := ArquivoIni.ReadInteger('ConfigEtiqueta', 'TipoImpressao', 0);

    if ArquivoIni.ValueExists('ConfigEtiqueta', 'UnidadeMedida') then
      cbUnidade.ItemIndex := ArquivoIni.ReadInteger('ConfigEtiqueta', 'UnidadeMedida', 0);
  finally
    ArquivoIni.Free;
  end;
end;

procedure TGeradorEtiquetas.SalvarConfiguracoes;
var ArquivoIni: TIniFile;
begin
  ArquivoIni := TIniFile.Create(ChangeFileExt(Application.ExeName, '.ini'));
  try
    // Salva tudo o que está na tela no arquivo .ini
    ArquivoIni.WriteString('ConfigEtiqueta', 'Largura', edtLargura.Text);
    ArquivoIni.WriteString('ConfigEtiqueta', 'Altura', edtAltura.Text);
    ArquivoIni.WriteString('ConfigEtiqueta', 'Colunas', edtColuna.Text);
    ArquivoIni.WriteString('ConfigEtiqueta', 'Espacamento', edtEspacamento.Text);
    ArquivoIni.WriteString('ConfigEtiqueta', 'QuantidadePadrao', edtQuantidade.Text);
    ArquivoIni.WriteInteger('ConfigEtiqueta', 'TipoImpressao', cbTipoImpressao.ItemIndex);
    ArquivoIni.WriteInteger('ConfigEtiqueta', 'UnidadeMedida', cbUnidade.ItemIndex);
  finally
    ArquivoIni.Free;
  end;
end;

// ============================================================================
//  AO ABRIR O PROGRAMA (FORM CREATE)
// ============================================================================
procedure TGeradorEtiquetas.FormCreate(Sender: TObject);
var i: Integer;
begin
  Self.WindowState := wsMaximized; // Abre maximizado

  // Configura os painéis para não "dançarem" na tela
  if Assigned(Panel1) then Panel1.Align := alTop;
  if Assigned(Panel2) then
  begin
    Panel2.Align := alLeft;
    Panel2.Width := 340;
    Panel2.ParentBackground := False;
    for i := 0 to Panel2.ControlCount - 1 do
      Panel2.Controls[i].Anchors := [akLeft, akTop]; // Trava os botões
  end;
  DBGrid1.Align := alClient;

  // Preenche as opções
  cbUnidade.Items.Clear;
  cbUnidade.Items.Add('Polegadas (inches)');
  cbUnidade.Items.Add('Milímetros (mm)');
  cbUnidade.ItemIndex := 0;

  cbTipoImpressao.Items.Clear;
  cbTipoImpressao.Items.Add('Visualizar (Prévia)');
  cbTipoImpressao.Items.Add('Imprimir Direto');
  cbTipoImpressao.ItemIndex := 0;

  // Liga o Grid ao Banco
  DataSource1.DataSet := FDQuery2;

  // Prepara o Relatório para usar a Memória
  dsRelatorio := TDataSource.Create(Self);
  dsRelatorio.DataSet := mtEtiquetas;
  ppDBPipeline1.DataSource := dsRelatorio;

  // Carrega configurações e desenha a tela
  CarregarConfiguracoes;
  AjustarLayoutGeral;

  // Tenta abrir a conexão com o banco logo de cara
  if not FDQuery2.Active then
  try
    FDQuery2.Open;
  except
    // Se der erro de conexão aqui, ele ignora silenciosamente
  end;
end;

// Ao fechar, salva as configurações
procedure TGeradorEtiquetas.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  SalvarConfiguracoes;
end;

// ============================================================================
//  LÓGICA PRINCIPAL: GERAR ETIQUETA
//  Aqui acontece toda a mágica da impressão
// ============================================================================
procedure TGeradorEtiquetas.BtnGerarEtiquetaClick(Sender: TObject);
var
  ListaDeCodigos, ListaDeCodigosFormatada: string;
  Quantidade, NumColunas, I: Integer;
  LarguraEtiqueta, AlturaEtiqueta, EspacamentoColunas: Single;
  BaseSQL, SQLOriginal: string; // Variável para salvar o SQL da lista completa
begin
  // 1. Verifica se o banco está conectado
  if not Conexao.Connected then
  begin
    try Conexao.Connected := True; except on E: Exception do begin ShowMessage('Erro Conexão: ' + E.Message); Exit; end; end;
  end;

  // 2. Validação: O usuário digitou um código?
  if Trim(edtCodigo.Text) = '' then
  begin
    // Se estiver vazio, tenta pegar o que está selecionado no Grid
    if (FDQuery2.Active) and (not FDQuery2.IsEmpty) then
       edtCodigo.Text := FDQuery2.FieldByName('CodigoProduto').AsString;

    if Trim(edtCodigo.Text) = '' then
    begin
      ShowMessage('Informe o Código no campo "CÓDIGO DO PRODUTO" ou clique na tabela.');
      if edtCodigo.CanFocus then edtCodigo.SetFocus;
      Exit;
    end;
  end;

  // [IMPORTANTE] Salva o SQL original (Lista completa) para restaurar depois
  SQLOriginal := FDQuery2.SQL.Text;

  try
      // 3. Prepara o código para o SQL (Formata '1','2'...)
      ListaDeCodigos := StringReplace(edtCodigo.Text, ' ', ',', [rfReplaceAll]);
      ListaDeCodigosFormatada := '''' + StringReplace(ListaDeCodigos, ',', ''',''', [rfReplaceAll]) + '''';

      // 4. Pega os valores da tela (NÃO RESETA MAIS OS VALORES)
      Quantidade := StrToIntDef(edtQuantidade.Text, 1);

      NumColunas := StrToIntDef(edtColuna.Text, 1);
      if NumColunas <= 0 then NumColunas := 1;

      // Valores seguros (usando sua preferência padrão se der erro)
      LarguraEtiqueta := StrToFloatSafe(edtLargura.Text, 4.5);
      AlturaEtiqueta  := StrToFloatSafe(edtAltura.Text, 1.7);
      EspacamentoColunas := StrToFloatSafe(edtEspacamento.Text, 1.0);

      // 5. Configura o Relatório
      ConfigureReportForLabels(NumColunas, LarguraEtiqueta, AlturaEtiqueta, EspacamentoColunas);

      // Força a ligação dos campos (Barras e Unidade)
      if Assigned(ppDBBarCode1) then ppDBBarCode1.DataField := 'CodigoProduto';
      if Assigned(ppDBText3) then ppDBText3.DataField := 'CodigoUnidade';

      // 6. Muda o SQL para buscar SÓ o produto escolhido
      FDQuery2.Close;

      // --- AQUI ESTÁ A LÓGICA DE TRADUÇÃO DAS UNIDADES (CASE) ---
      BaseSQL := 'SELECT P.au_ite AS CodigoProduto, ' +
                 'P.ab_ite + '' '' + P.ac_ite AS Descricao, ' +
                 'CASE ' +
                 '  WHEN P.ad_ite = ''01'' THEN ''UN'' ' + // Se banco for 01 -> Vira UN
                 '  WHEN P.ad_ite = ''02'' THEN ''KG'' ' + // Se banco for 02 -> Vira KG
                 '  WHEN P.ad_ite = ''03'' THEN ''LT'' ' + // Se banco for 03 -> Vira LT
                 '  WHEN P.ad_ite = ''04'' THEN ''CX'' ' +
                 '  WHEN P.ad_ite = ''05'' THEN ''PC'' ' +
                 '  ELSE P.ad_ite ' + // Se não for nenhum desses, mostra o número original
                 'END AS CodigoUnidade, ' +
                 'A.PrecoVendaMin AS PrecoMinimo, ' +
                 'A.PrecoVendaMax AS PrecoMaximo, ' +
                 'I.NCM AS NCM_Imposto, I.CSTsaidas AS CST_Saida, I.ALIQUOTAICMS AS AliquotaICMS ' +
                 'FROM CE_PRODUTO P ' +
                 'INNER JOIN CE_PRODUTOS_ADICIONAIS A ON P.au_ite = A.CodReduzido ' +
                 'INNER JOIN CE_PRODUTOS_IMPOSTOS I ON P.au_ite = I.CodReduzido ' +
                 'WHERE P.au_ite IN (' + ListaDeCodigosFormatada + ') ORDER BY P.au_ite';

      FDQuery2.SQL.Text := BaseSQL;
      FDQuery2.Open;

      if FDQuery2.IsEmpty then
      begin
        // Se não achou, restaura a lista e avisa
        FDQuery2.Close;
        FDQuery2.SQL.Text := SQLOriginal;
        FDQuery2.Open;
        ShowMessage('Produto não encontrado.');
        Exit;
      end;

      // 7. Popula a Tabela de Memória (Duplica as etiquetas conforme a Quantidade)
      mtEtiquetas.Close;
      mtEtiquetas.FieldDefs.Clear;
      mtEtiquetas.FieldDefs.Assign(FDQuery2.FieldDefs);
      mtEtiquetas.CreateDataSet;

      mtEtiquetas.DisableControls; // Trava visual para ser rápido
      try
        FDQuery2.First;
        while not FDQuery2.Eof do
        begin
           for I := 1 to Quantidade do // Repete X vezes
           begin
             mtEtiquetas.Append;
             mtEtiquetas.CopyFields(FDQuery2);
             mtEtiquetas.Post;
           end;
           FDQuery2.Next;
        end;
      finally
        mtEtiquetas.First;
        mtEtiquetas.EnableControls;
      end;

      // 8. Manda Imprimir
      AjustarLayoutGeral;
      Etiqueta.ShowPrintDialog := True;
      if cbTipoImpressao.ItemIndex = 0 then Etiqueta.DeviceType := 'Screen' else Etiqueta.DeviceType := 'Printer';
      Etiqueta.Print;

  finally
      // 9. FINALIZAÇÃO: Restaura o Grid para mostrar todos os produtos de novo
      if (SQLOriginal <> '') and (FDQuery2.SQL.Text <> SQLOriginal) then
      begin
        FDQuery2.Close;
        FDQuery2.SQL.Text := SQLOriginal;
        FDQuery2.Open;
        // OBS: Não chamamos mais funções que resetam os campos aqui.
        // O que você digitou na tela continua lá.
      end;
  end;
end;

// ============================================================================
//  CONFIGURAÇÃO DO PAPEL NO REPORT BUILDER
// ============================================================================
procedure TGeradorEtiquetas.ConfigureReportForLabels(NumColunas: Integer; LarguraEtiqueta, AlturaEtiqueta, Espacamento: Single);
var
  LarguraPapel, Margem: Double;
begin
  // 1. Define se é mm ou polegadas
  if cbUnidade.ItemIndex = 1 then Etiqueta.Units := utMillimeters else Etiqueta.Units := utInches;
  Margem := 0.1;

  // 2. Calcula largura total (se tiver colunas)
  if NumColunas > 1 then
    LarguraPapel := (LarguraEtiqueta * NumColunas) + (Espacamento * (NumColunas - 1)) + (Margem * 2)
  else
    LarguraPapel := LarguraEtiqueta + (Margem * 2);

  // 3. Configura a Impressora (Papel)
  with Etiqueta.PrinterSetup do
  begin
    PaperName := 'Custom';
    PaperWidth := LarguraPapel;
    PaperHeight := AlturaEtiqueta; // Aqui recebe o 29,5
    MarginTop := 0; MarginBottom := 0; MarginLeft := Margem; MarginRight := Margem;

    // Trava em Retrato para a Zebra não girar
    Orientation := poPortrait;
  end;

  // --- [CORREÇÃO DO ERRO] ---
  // Força a área de desenho a ter EXATAMENTE a mesma altura do papel.
  // Assim, se o papel for 29,5, a banda vira 29,5 e o erro some.
  ppDetailBand1.Height := AlturaEtiqueta;

  // 4. Configura Colunas
  Etiqueta.Columns := NumColunas;
  if Assigned(Etiqueta.ColumnPositions) then Etiqueta.ColumnPositions.Clear;

  if NumColunas > 1 then
  begin
    Etiqueta.ColumnWidth := LarguraEtiqueta;
    ppDetailBand1.ColumnTraversal := ctLeftToRight;
  end
  else
    Etiqueta.ColumnWidth := LarguraPapel;
end;

// ============================================================================
//  EXPORTAÇÃO PARA EXCEL (Sem precisar do Office instalado)
// ============================================================================
function TGeradorEtiquetas.FormatAsCurrency(const Value: Variant): string;
var FS: TFormatSettings;
begin
  FS := TFormatSettings.Create; FS.CurrencyString := 'R$ '; FS.CurrencyFormat := 2;
  Result := StringReplace(FormatFloat('#,##0.00', Value, FS), '.', ',', [rfReplaceAll]);
end;

function TGeradorEtiquetas.BuildHTMLTable(DataSet: TDataSet): string;
var I: Integer; HTML: TStringList; Val: string;
begin
  HTML := TStringList.Create;
  try
    HTML.Add('<html><body><table border="1"><tr>');
    for I := 0 to DataSet.Fields.Count - 1 do HTML.Add('<th>' + DataSet.Fields[I].FieldName + '</th>');
    HTML.Add('</tr>');
    DataSet.DisableControls;
    try
      DataSet.First;
      while not DataSet.Eof do
      begin
        HTML.Add('<tr>');
        for I := 0 to DataSet.Fields.Count - 1 do
        begin
          if (DataSet.Fields[I].DataType in [ftCurrency, ftFloat]) then Val := FormatAsCurrency(DataSet.Fields[I].AsFloat)
          else Val := DataSet.Fields[I].AsString;
          HTML.Add('<td>' + Val + '</td>');
        end;
        HTML.Add('</tr>');
        DataSet.Next;
      end;
    finally
      DataSet.EnableControls;
    end;
    HTML.Add('</table></body></html>');
    Result := HTML.Text;
  finally
    HTML.Free;
  end;
end;

procedure TGeradorEtiquetas.BtnExcelClick(Sender: TObject);
var SD: TSaveDialog; SL: TStringList; I: Integer; UseXLS: Boolean; Line: string;
begin
  UseXLS := (rgFormatoExportacao.ItemIndex = 1);
  SD := TSaveDialog.Create(nil); SL := TStringList.Create;
  try
    if UseXLS then begin SD.Filter := 'Excel|*.xls'; SD.DefaultExt := 'xls'; end
    else begin SD.Filter := 'CSV|*.txt'; SD.DefaultExt := 'txt'; end;
    SD.FileName := 'Exp_' + FormatDateTime('hhmmss', Now);

    if SD.Execute then
    begin
      // Decide qual fonte usar: Memória (se já gerou etiquetas) ou Banco (se acabou de abrir)
      if mtEtiquetas.Active and (mtEtiquetas.RecordCount > 0) then mtEtiquetas.First else if not FDQuery2.Active then FDQuery2.Open;

      if (mtEtiquetas.Active) and (mtEtiquetas.RecordCount > 0) then
      begin
          if UseXLS then SL.Text := BuildHTMLTable(mtEtiquetas)
          else begin
             Line := ''; for I := 0 to mtEtiquetas.Fields.Count - 1 do Line := Line + mtEtiquetas.Fields[I].FieldName + #9;
             SL.Add(Line);
             mtEtiquetas.First;
             while not mtEtiquetas.Eof do begin
               Line := ''; for I := 0 to mtEtiquetas.Fields.Count - 1 do Line := Line + mtEtiquetas.Fields[I].AsString + #9;
               SL.Add(Line); mtEtiquetas.Next;
             end;
          end;
      end
      else if UseXLS then SL.Text := BuildHTMLTable(FDQuery2);

      SL.SaveToFile(SD.FileName, TEncoding.UTF8);
      ShowMessage('Salvo!');
    end;
  finally
    SD.Free; SL.Free;
  end;
end;

end.
